<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ApprovalsGenerate">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/setbaxckground"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Employee Name"
            android:drawableStart="@drawable/ic_username_white"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_designation"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Designation" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_qualifiction"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Qualification" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_department"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Department" />

        <EditText
            android:id="@+id/teaching_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_subject"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Subject"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout16"
        app:layout_constraintStart_toStartOf="@+id/linearLayout16"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
        app:layout_constraintVertical_bias="0.030">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

<!--            <Spinner-->
<!--                android:id="@+id/spinner"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_weight="1"-->
<!--                android:dropDownSelector="@drawable/ic_dropdown"-->
<!--                android:theme="@style/Theme.AppCompat.Light.DarkActionBar"-->
<!--                style="@style/Widget.AppCompat.DrawerArrowToggle"-->
<!--                android:background="@drawable/spinner_background_design"-->
<!--                android:entries="@array/session"-->
<!--                android:filterTouchesWhenObscured="false"-->
<!--                android:popupBackground="@color/white"-->
<!--                android:scrollbars="none"-->
<!--                android:spinnerMode="dropdown"-->
<!--                />-->
            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:backgroundTint="@color/selfwhite"
                android:layout_weight="1"
                app:ms_background_color="@color/selfcolor_grey"
                android:layout_height="45dp"/>
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="Morning" />
        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:text="Evening" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:fontFamily="@font/adamina"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Section" />

            <CheckBox
                android:id="@+id/a"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="A" />

            <CheckBox
                android:id="@+id/b"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.45"
                android:text="B" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/session"
        app:layout_constraintVertical_bias="0.030">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:fontFamily="@font/adamina"
            android:textColor="@color/black"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="Subject" />

        <CheckBox
            android:id="@+id/morning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.09"
            android:text="Theory" />

        <CheckBox
            android:id="@+id/evening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04"
            android:text="Practical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/semister_or_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject"
        app:layout_constraintVertical_bias="0.030">

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/material_spinner"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/selfwhite"
            android:layout_weight="1"
            app:ms_background_color="@color/selfcolor_grey"
            android:layout_height="45dp"/>

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/material_spinner2"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/selfwhite"
            android:layout_weight="1"
            app:ms_background_color="@color/selfcolor_grey"
            android:layout_height="45dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_or_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semister_or_class"
        app:layout_constraintVertical_bias="0.030">


    </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_button"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/session"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/session"
        app:layout_constraintTop_toBottomOf="@+id/session"
        app:layout_constraintVertical_bias="0.213" />

</androidx.constraintlayout.widget.ConstraintLayout>
