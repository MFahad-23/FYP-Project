<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.ApprovalsGenerate">

    <!--<ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/logg"
        app:layout_constraintTop_toTopOf="parent" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/employee_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/photocapture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.060" />

    <ImageButton
        android:id="@+id/imagecapture"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:elevation="30dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/employee_image"
        app:layout_constraintEnd_toEndOf="@+id/employee_image"
        app:layout_constraintHorizontal_bias="0.80"
        app:layout_constraintStart_toStartOf="@+id/employee_image"
        app:layout_constraintTop_toTopOf="@+id/employee_image"
        app:layout_constraintVertical_bias="1"
        app:srcCompat="@drawable/pht" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/employee_image"
        app:layout_constraintVertical_bias="0.05">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/employee_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_background_design"
                android:drawableStart="@drawable/ic_username_white"
                android:drawablePadding="20dp"
                android:fontFamily="@font/adamina"
                android:hint="@string/employeename"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/employee_designation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_background_design"
                android:drawableStart="@drawable/ic_designation"
                android:drawablePadding="20dp"
                android:fontFamily="@font/adamina"
                android:hint="@string/designation"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/employee_qualification"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_background_design"
                android:drawableStart="@drawable/ic_qualifiction"
                android:drawablePadding="20dp"
                android:fontFamily="@font/adamina"
                android:hint="@string/employee_qualification"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_background_design"
                android:drawableStart="@drawable/ic_department"
                android:drawablePadding="20dp"
                android:fontFamily="@font/adamina"
                android:hint="@string/employee_depart"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/teaching_subject"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/spinner_background_design"
                android:drawableStart="@drawable/ic_subject"
                android:drawablePadding="20dp"
                android:fontFamily="@font/adamina"
                android:hint="@string/employee_subject"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:textFontWeight="500"
                android:textSize="14sp"
                tools:ignore="DuplicateIds" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/english_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_background_design"
                    android:drawableRight="@drawable/calender"
                    android:drawablePadding="20dp"
                    android:editable="false"
                    android:hint="@string/payroll_date"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:pointerIcon="none"
                    android:textColorHint="@color/grey"
                    android:textSize="14sp" />

                <!--            <Spinner-->
                <!--                android:id="@+id/spinner"-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:layout_weight="1"-->
                <!--                android:dropDownSelector="@drawable/ic_dropdown"-->
                <!--                android:theme="@style/Theme.AppCompat.Light.DarkActionBar"-->
                <!--                style="@style/Widget.AppCompat.DrawerArrowToggle"-->
                <!--                android:background="@drawable/spinner_background_design"-->
                <!--                android:entries="@array/session"-->
                <!--                android:filterTouchesWhenObscured="false"-->
                <!--                android:popupBackground="@color/white"-->
                <!--                android:scrollbars="none"-->
                <!--                android:spinnerMode="dropdown"-->
                <!--                />-->

            </LinearLayout>

            <LinearLayout
                android:id="@+id/semister_or_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/session_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/selfwhite"
                    app:ms_background_color="@color/selfcolor_grey" />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/semister_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/selfwhite"
                    app:ms_background_color="@color/selfcolor_grey" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/subject_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/class_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/selfwhite"
                    app:ms_background_color="@color/selfcolor_grey" />

                <EditText
                    android:id="@+id/datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/spinner_background_design"
                    android:drawableRight="@drawable/calender"
                    android:editable="false"
                    android:hint="Date"
                    android:inputType="none"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColorHint="@color/grey"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/date_or_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/section"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/section_a"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:clickable="true"
                        android:text="A"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/section_b"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:text="B"
                        android:textAlignment="center"
                        android:textSize="12sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/session"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/session1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/morning_programme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:text="@string/morning"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/evening_programme"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:text="@string/evening"
                        android:textSize="12sp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/adamina"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="@string/subject_type"
                    android:textColor="@color/black"
                    android:textFontWeight="500"
                    android:textSize="14sp" />

                <RadioGroup
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/theory_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:text="@string/theory"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/practical_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:text="@string/practical"
                        android:textSize="12sp" />

                </RadioGroup>

            </LinearLayout>

            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/login_button"
                android:text="@string/approvals_submit"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/grey"
                android:textFontWeight="600"
                android:textSize="14dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
