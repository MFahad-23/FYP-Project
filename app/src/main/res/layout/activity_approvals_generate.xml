<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ApprovalsGenerate">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/logg"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/employee_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/photocapture"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout16"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="@+id/linearLayout16"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.099" />

    <ImageButton
        android:id="@+id/imagecapture"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@color/transparent"
        android:clickable="true"
        android:elevation="20dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/employee_image"
        app:layout_constraintEnd_toEndOf="@+id/employee_image"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="@+id/employee_image"
        app:layout_constraintTop_toTopOf="@+id/employee_image"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/image_capture" />

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:layout_constraintVertical_bias="0.31">

        <EditText
            android:id="@+id/employee_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Employee Name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/spinner_background_design"
            android:drawableStart="@drawable/ic_username_white"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:textColorHint="@color/grey"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/employee_designation"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/spinner_background_design"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_designation"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Designation" />

        <EditText
            android:id="@+id/employee_qualification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/spinner_background_design"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_qualifiction"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Qualification" />

        <EditText
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/spinner_background_design"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_department"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Department" />

        <EditText
            android:id="@+id/teaching_subject"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/spinner_background_design"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:drawableStart="@drawable/ic_subject"
            android:drawablePadding="10dp"
            android:fontFamily="@font/adamina"
            android:textFontWeight="500"
            android:textSize="14sp"
            android:hint="Subject"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout16"
        app:layout_constraintStart_toStartOf="@+id/linearLayout16"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout16"
        app:layout_constraintVertical_bias="0.030">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/english_date"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/spinner_background_design"
                android:drawableRight="@drawable/calender"
                android:drawablePadding="20dp"
                android:editable="false"
                android:hint="00-Month-0000"
                android:inputType="none"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:pointerIcon="none"
                android:textColorHint="@color/grey"
                android:textSize="14sp" />

            <!--            <Spinner-->
            <!--                android:id="@+id/spinner"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_weight="1"-->
            <!--                android:dropDownSelector="@drawable/ic_dropdown"-->
            <!--                android:theme="@style/Theme.AppCompat.Light.DarkActionBar"-->
            <!--                style="@style/Widget.AppCompat.DrawerArrowToggle"-->
            <!--                android:background="@drawable/spinner_background_design"-->
            <!--                android:entries="@array/session"-->
            <!--                android:filterTouchesWhenObscured="false"-->
            <!--                android:popupBackground="@color/white"-->
            <!--                android:scrollbars="none"-->
            <!--                android:spinnerMode="dropdown"-->
            <!--                />-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/semister_or_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/session_spinner"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/selfwhite"
                app:ms_background_color="@color/selfcolor_grey" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/semister_spinner"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:backgroundTint="@color/selfwhite"
                app:ms_background_color="@color/selfcolor_grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/class_spinner"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:backgroundTint="@color/selfwhite"
                app:ms_background_color="@color/selfcolor_grey" />

            <EditText
                android:id="@+id/datepicker"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background_design"
                android:drawableRight="@drawable/calender"
                android:hint="Date"
                android:editable="false"
                android:textSize="12sp"
                android:inputType="none"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@color/grey" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/date_or_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/adamina"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Section"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/section"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/section_a"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="A"
                    android:layout_weight="0.8"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/section_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="B"
                    android:layout_weight="1"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/adamina"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Session"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@id/session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/morning_programme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="Morning"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/evening_programme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="Evenning"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/adamina"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Subject"
                android:textColor="@color/black"
                android:textFontWeight="500"
                android:textSize="14sp" />

            <RadioGroup
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/theory_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="Theory"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/practical_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:text="Practical"
                    android:textSize="12sp" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/login_button"
        android:text="@string/submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.419" />

</androidx.constraintlayout.widget.ConstraintLayout>
